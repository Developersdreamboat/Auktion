@model WEB_Auction.Models.AuctionCreateModel

<h2>Создать аукцион</h2>
<form asp-action="Add" asp-controller="Auction" asp-anti-forgery="true">
    <div>
        <div>
            <label asp-for="Name">Введите название</label><br />
            <input type="text" asp-for="Name" />
        </div>
        <div>
            <label asp-for="Description">Введите описание</label><br />
            <input asp-for="Description" />
        </div>
        <div>
            <input type="submit" value="Создать" />
        </div>
    </div>
</form>